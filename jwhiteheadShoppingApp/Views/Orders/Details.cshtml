@model jwhiteheadShoppingApp.Models.CodeFirst.Order

@{
    ViewBag.Title = "Details";
}
<div class="styleCenterMediaBox ">
    <h2 style="display: inline-block">Confirm Order</h2>
    <a href="@Url.Action("Confirm","Orders", new { total = ViewBag.CartTotalCost })" class="myCheckOutBttn">Confirm</a>
    <a href="@Url.Action("Delete","Orders", new { id = Model.Id } )" class="myBttnGray">Delete Order</a>

    <div>
        <h4>Order Details</h4>
        <hr class="hrLine" />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ZipCode)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ZipCode)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Country)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Total)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Total)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OrderDate)
            </dd>

            <dt>
                Customer
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Customer.FullName)
            </dd>

        </dl>

        <table class="table">
            <tr>
                <th style="border-color: black;"></th>
                <th style="border-color: black;">
                    Item
                </th>
                <th style="border-color: black;">
                    Quantity
                </th>
                <th style="border-color: black;">
                    Unit Price
                </th>
            </tr>

            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td style="border-color: black;">
                        <img src="@item.Item.MediaURL" style="max-width: 60px" />
                    </td>
                    <td style="border-color: black;">
                        @Html.DisplayFor(modelItem => item.Item.Name)
                    </td>
                    <td style="border-color: black;">
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td style="border-color: black;">
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    @*<td>
                            @Html.ActionLink("Details", "Details", "Items", new { id = item.ItemId }, null)
                        </td>*@
                </tr>
            }

        </table>
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>